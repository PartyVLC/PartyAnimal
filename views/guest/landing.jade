extends ../layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome to #{dj.username}'s party:
						div.signup-wall
							ul.user-details
								li Username ---> #{dj.username}
								li Email    ---> #{dj.email}
								li First Name ---> #{dj.firstName} 
								li Last Name ---> #{dj.lastName}