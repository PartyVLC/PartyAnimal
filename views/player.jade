extends ./index.jade

block title

block search
  .padding1em
  .input-group
    input(type="text", class="form-control", placeholder="Search", aria-hiddenscribedby="basic-addon1",id='searchBar',onkeypress='searchKeyPress()')
    div(class="input-group-btn")
      button(onclick='search()',id='searchButt',class="btn btn-default", type="button") Go
  
  div(id='searchResults',class="btn-group" role="group")

block playlist
  .padding1em
  .input-group
      input(type="text", class="form-control", placeholder="New Playlist")
      span(class="input-group-btn")
        button(class="btn btn-default", type="button", onclick='addPlaylist(this)')
          span(class="glyphicon glyphicon-plus",aria-hidden="true")

block playlists
  .panel-group(id='playlistAccordion',role='tablist',aria-multiselectable="true")

block player
  .list-group
    .row
      #player(display:hidden).col-xs-6.col-xs-offset-3
    .row
      .col-sm-10
        button(type='button',class='btn btn-default',onclick='playPause()')
          span(id='playPauseButt',class='glyphicon glyphicon-pause', aria-hidden='true')

      #control: .col-sm-2
      
    .progress(id='progress'): .col-xs-12