extends ../layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title #{user.firstname}, Add New Set
					div.newset-wall
						form(class='form-signin', action='/dj/set/new', method='POST')
							input(type='text', name='Set Title', class='form-control', placeholder='Title',required, autofocus)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Create
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}