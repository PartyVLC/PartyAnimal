extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Add Song
					div.signup-wall
						form(class='form-signin', action='/songs/add', method='POST')
							input(type='text', name='title', class='form-control', placeholder='title',required, autofocus)
							
							input(type='text', name='songid', class='form-control', placeholder='song id',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Butthole!
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}
