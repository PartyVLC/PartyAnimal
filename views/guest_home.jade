extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Welcome to #{profile.firstName}'s Profile
					div.signup-wall
						ul.user-details
							li Username ---> #{profile.username}
							li Email    ---> #{profile.email}
							li First Name ---> #{profile.firstName} 
							li Last Name ---> #{profile.lastName}

						if (profile.playlists == [])
							h3.text-center <b> #{profile.username} has no playlists!</b>
							
						else
							h3.text-center #{profile.username}'s Playlists
							ul: #playlists
								each playlist, index in profile.playlists
									li <b>#{index+1}</b>. #{playlist.title}
										if (playlist.songs == [])
											b #{playlist.title} has no songs...
										else
											ul: #songs
											each song in playlist.songs
												li #{song.title}
						a(href='/guest/#{profile.username}'): button(class='btn btn-lg btn-primary btn-block') #{profile.username}'s Currently Playing

